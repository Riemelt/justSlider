include ./components/head/head
include ./components/slider-demo/slider-demo

-
  const className = 'demo'
  const data = require('./data.json')
  const demos = data.demos

  const sliders = [
    'primary',
    'secondary',
    'tertiary',
    'quaternary'
  ]

doctype html
html(
  lang="en"
)
  +head({ title })
  body
    ul(class=`${className} js-${className}`)
      each slider in sliders
        li(class=`${className}__slider-demo`)
          div(class=`${className}__slider-demo-${slider} js-${className}__slider-demo-${slider}`)
            +slider-demo(demos[slider])
    link(href=require('./styles/styles.scss') rel='stylesheet')
    script(src=require('./index.ts') defer='defer')